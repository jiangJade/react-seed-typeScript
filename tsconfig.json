{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/static",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strict": true, // 启用所有严格类型检查选项
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "exclude": [
    "build",
    "node_modules",
    "scripts",
    "webpack"
  ]
}